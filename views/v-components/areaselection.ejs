<div id="" class="sixteen wide column">
    <h5><i class="right angle icon divider"></i>Area analysis</h5>
    <div class="ui form">
    	<div class="inline fields">
    		<div class="ui mini compact menu">
	            <div class="ui simple dropdown item">
	                <span>{{ selections.areaName }}</span>
	                <i class="dropdown icon"></i>
	                <div class="menu">
	                    <div v-for='item in settings.hotareas' class="item" v-on:click='changeAnaArea(item)'>{{ item.name }}</div>
	                </div>
	            </div>
	        </div>

    		<div class="ui mini compact menu">
                <div class="ui simple dropdown item">
                    <span>{{ selections.vctimeName }}</span>
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <div v-for='item in settings.daytypes' class="item">
                            <i class="dropdown icon"></i>
                            <span>{{ item.name }}</span>
                            <div class="menu">
                                <div v-for="tpitem in item.timeperiods" class="item" v-on:click='changevcTime(item.name, tpitem.name, item.val, tpitem.val)'>{{ tpitem.name }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button v-on:click="areaQuery()">Display</button>
    	</div>
    	
    </div>
</div>