<div id="" class="sixteen wide column">
    <h5><i class="right angle icon divider"></i>Entropy and Filter</h5>

	<div class="ui form">
        <div class="inline fields">
            <label>Type</label>
            <div class="field">
                <div class="ui mini compact menu">
                    <div class="ui simple dropdown item">
                        <span>{{ selections.entropymodeName }}</span>
                        <i class="dropdown icon"></i>
                        <div class="menu">
                            <div v-for='item in settings.entropytypes' class="item" v-on:click='changeEntropyMode(item)'>{{ item.name }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <label>Filter</label>
            <div class="field">
                <input type="range" id="entropyfilterrange" v-model="selections.entropyfilterVal" step='0.01' :max="settings.entropyfilterrange">
                <label>{{ selections.entropyfilterVal }}</label>
            </div>
            <div class="field">
                <div class="ui checkbox">
                  <input type="checkbox" name="entropyfilterreverse" v-model='selections.entropyfilterreverse'>
                  <label>reverse</label>
                </div>
            </div>
            <div class="field">
                <button id="clusterBtn" class="ui mini secondary button" :class="{ 'loading': states.entropyfilter }" v-on:click='entropyFilter'>Filter</button>
            </div>
        </div>
    </div>
</div>