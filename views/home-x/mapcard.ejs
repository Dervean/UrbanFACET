<div :id="'card' + index" @click="bindTabClick(index)" class="ui card">
	<div class="image">
		<h3 class="mapcardtitle ui header">{{ cals.cities[model.city] }}</h3>
		<img v-show="sels.lstindex === index" :src="cals.cimgs[model.city].aurl">
		<img v-show="sels.lstindex !== index" :src="cals.cimgs[model.city].nurl">
	</div>
	<div class="content">
		
		<div class="description">
			<div class="ui grid">
				<div class="sixteen wide column">
					<div class="c-halfwidth">
						<button class="ui mini button" :class="areaselState" v-on:click="optAreaSelect(index)">Selection</button>
					</div>
					<div class="c-halfwidth">
						<div class="ui checkbox">
						  <input type="checkbox" :name="'reverseColor'+index" v-model="sels.objs[index].reverse">
						  <label>Reverse</label>
						</div>
					</div>
				</div>
				<template v-if="model.dtype !== 'd'" >
					<div class="sixteen wide column">
						<vue-slider :id="'slider'+index" :ref="'eSlider'+index" v-bind="sels.objs[index].slider" @drag-end="updateSlider(index)" v-model="sels.objs[index].slider.value"></vue-slider>
					</div>
				</template>

				<div :id="'maplegend'+index"  class="sixteen wide column">
					<svg :id="'gridmaplegend'+index" height='0'></svg>
					<!-- <div :id="'contourmaplegend'+index">
					</div> -->
				</div>
			</div>
		</div>
	</div>
</div>
